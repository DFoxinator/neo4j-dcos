{
   "id":"neo4j",
   "cpus":2,
   "mem":8000,
   "instances":3,
   "container":{
      "type":"DOCKER",
      "docker":{
         "image":"unterstein/dcos-neo4j:latest",
         "network": "USER",
         "forcePullImage": true,
         "volumes": [
            {
              "containerPath":"data",
              "mode":"RW",
              "persistent": {
                "type":"root",
                "size":1000
              }
            },
            {
              "containerPath": "/data",
              "hostPath": "data",
              "mode": "RW"
            }
         ]
      }
   },
   "env":{
      "NEO4J_AUTH":"none",
      "NEO4J_dbms_mode": "CORE",
      "NEO4J_causalClustering_expectedCoreClusterSize": "3"
   },
   "labels":{
      "HAPROXY_0_VHOST":"junterste-publicsl-s90v9x8vnlfd-347566149.eu-central-1.elb.amazonaws.com",
      "HAPROXY_GROUP":"external"
   },
   "ipAddress": {
      "networkName": "dcos"
   }
}