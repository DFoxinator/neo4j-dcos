{
  "type": "object",
  "properties": {
    "neo4j": {
      "description": "Neo4j specific configuration properties",
      "type": "object",
      "properties": {
        "auth-username": {
          "description": "Username for authentication",
          "type": "string",
          "default": "neo4j"
        },
        "auth-password": {
          "description": "Password for authentication",
          "type": "string",
          "default": "dcos"
        }
      },
      "required": [
        "auth-username",
        "auth-password",
        "core-cpus",
        "core-mem",
        "core-disk",
        "core-instances",
        "core-expected-cluster-size",
        "replica-cpus",
        "replica-mem",
        "replica-disk",
        "replica-instances",
        "network-name"
      ]
    }
  },
  "required": [
    "neo4j"
  ]
}