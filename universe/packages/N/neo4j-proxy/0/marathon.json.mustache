{  
  "id":"proxy",
  "cpus":1,
  "mem":1024,
  "instances":1,
  "dependencies":[
    "/neo4j/core"
  ],
  "container":{  
    "type":"DOCKER",
    "docker":{  
      "image":"unterstein/dcos-neo4j-proxy:1.0.0",
      "forcePullImage":true,
      "network":"BRIDGE",
      "portMappings":[  
        {  
          "hostPort":7474,
          "containerPort":7474,
          "protocol":"tcp"
        }
      ]
    }
  },
  "env":{  
    "DCOS_NEO4J_USER":"{{neo4j.auth-username}}",
    "DCOS_NEO4J_PASS":"{{neo4j.auth-password}}"
  },
  "healthChecks":[
    {
      "protocol":"HTTP",
      "path":"/",
      "port":7474,
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ],
  "acceptedResourceRoles":[  
    "slave_public"
  ]
}